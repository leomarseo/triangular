<div><%= link_to 'add mask', new_mask_path, class: "btn btn-primary" %></div>

<h3><%= @user.first_name %> masks:</h3>
<div class="masks-container row"> <!-- Masks container -->
  <% @user.masks.each do |mask| %>
    <div class="masks-cards col-12"> <!-- Mask card -->
      <div class="mask-photo">
        <% if mask.photo.attached? %>
          <%= cl_image_tag mask.photo.key, :width=>200, :height=>200, crop: :fill %>
        <% else %>
          <%=  image_tag("borat_mask.jpg", class: 'image-card-box') %>
        <% end %>
      </div>
      <div class="mask-overview">
        <p><strong><p><%= mask.name %></p></strong></p>
        <p><%= mask.description %></p>
        <p><%= mask.condition %></p>
        <p><%= mask.size %></p>
        <% if mask.start_time && mask.end_time %>

          <div> <!-- Listing information -->

            <h5>Listed</h5>
            <p>from: <%= mask.start_time %></p>
            <p>to: <%= mask.end_time %></p>
            <p>price: <%= mask.price %></p>
            <%= link_to 'edit listing', edit_mask_path(mask.id), class: "far fa-edit" %>

          </div> <!-- /Listing information -->

        <% else %>

          <p>this mask is not yet on the market. List it now!</p>
          <%= link_to 'add listing', edit_mask_path(mask.id), class: "fas fa-plus" %>
        <% end %>
      </div>
      <!-- /Mask card -->

  <% end %>

</div> <!-- /Masks container -->
<%= render "layouts/navbar" %>

<div class="body-container">
  <div class="body-header">
    <h3>My listings</h3>
    <%= link_to "New listing", new_mask_path, class:"primary-button" %>
  </div>
  <div class="cards-container">
    <div class="row">
      <% @user.masks.each do |mask| %>
        <div class="col-lg-6 col-md-12 col-sm-12">
          <div class="card-container">
            <div class="card-image-section">
              <% if mask.photo.attached? %>
                <%= cl_image_tag mask.photo.key, :width=>200, :height=>200, crop: :fill %>
              <% else %>
                <%=  image_tag("borat_mask.jpg", class:"card-image") %>
              <% end %>
            </div>
            <div class="card-details-section">
              <div class="card-all-details">
                <h4><%= mask.name %></h4>
                <h5><%= mask.description %></h5>
                <br>
                <p>condition: <%= mask.condition %></p>
                <p>size: <%= mask.size %></p>
              </div>
              <div class="price">

              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>


