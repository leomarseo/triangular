<%= simple_form_for(@mask) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs" >
      <%= f.input :description %>
      <%= f.input :condition %>
      <%= f.input :size, collection: %w[Child Adult Hagrid] %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.input :price %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Mask" %>
    </div>
  <% end %>
