<div class="landing-container">
  <div class="back-to-masks">
    <%= link_to '< Back to the search', masks_path, class: "to-masks" %>
  </div>
  <div class="row justify-content-around mb-5">
    <div class="mask-img">
      <% if @mask.photo.attached? %>
        <%= cl_image_tag @mask.photo.key, crop: :fill %>
      <% else %>
        <%=  image_tag("borat_mask.jpg", class: 'image-card-box') %>
      <% end %>
    </div>
    <div class="mask-info">
      <h2><strong><%= @mask.name %></strong></h2><hr>
      <% if @mask.rating %> <!-- rating shows only if present (method returns false if there's not reviews)-->
        <div class="card-body">
          <h5 class="card-title name-font-size">Rating: <%= @mask.rating %>%</h5>
        </div>
      <% end %>
      <p><%= @mask.description %></p>
      <p>Condition: <%= @mask.condition %></p>
      <p>Size: <%= @mask.size %></p>
      <p>Price: <strong><% unless @mask.price.nil? %>
        <%= @mask.price % 1 == 0 ? @mask.price.truncate : @mask.price %>
      <% end %>
      â‚¬/day</strong></p>
      <p>Offered by: <%=  image_tag("logo.png", class: 'avatar') %>
        <%= @mask.user.first_name %></p>
    </div>
    <div class="shadow p-3 mb-5 bg-white rounded book-box">
      <h2 class="text-center mb-3">Book this Mask</h2>
      <%= simple_form_for @reservation, url: mask_reservations_path(@mask.id) do |f| %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.submit %>
      <% end %>
    </div>
  </div> <!-- end of div.row -->

<!--   Here start the reviews -->

  <div class="all-rev-box">
    <h3>Reviews</h3>
      <% if @mask.reviews.count.zero? %>
        <div class="rev-box">
          <p>There's not reviews yet for this mask..</p>
        </div>
      <% else %>
        <% @mask.reviews.each do |review| %>
          <div class="rev-box">
            <p><%=  image_tag("em.jpg", class: 'avatar') %>
                <%= review.user.first_name + ' ' + review.user.last_name %></p>
            <p><%= review.content %></p>
          </div>
        <% end %>
      <% end %>
  </div>


</div> <!-- end of div.landing-container -->


