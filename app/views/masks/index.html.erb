<div class="container">
  <div class="input-group mb-3 searchbar">
    <input type="text" class="form-control" placeholder="Search here..." aria-label="Recipient's username" aria-describedby="basic-addon2">
    <div class="input-group-append">
      <button class="btn btn-primary" type="button">Search</button>
    </div>
  </div>

  <div class="cards-in-row">
    <% @masks.each do |mask| %>
      <% return if mask.deleted %>

      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="triangular/app/assets/images/sur.png" alt="This is a mask">
        <div class="card-body">
          <h5 class="card-title"><%= mask.name %></h5>
          <p class="card-text"><%= mask.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <% unless mask.price.nil? %>
            <li class="list-group-item"><%= mask.price % 1 == 0 ? mask.price.truncate : mask.price %>â‚¬/day</li>
          <% end %>
          <li class="list-group-item"><%= mask.condition %></li>
          <li class="list-group-item">
            <label for="size-drop"><%= mask.size %></label>
            <select id="size-drop" class="form-control form-control-sm">
              <option>Child</option>
              <option>Adult</option>
              <option>Hagrid</option>
            </select>
          </li>
        </ul>
        <div class="card-body">
          <%= link_to 'show details', mask_path(mask.id), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
    <% end %>
  </div>

</div> <!-- This is the end of div.container -->






