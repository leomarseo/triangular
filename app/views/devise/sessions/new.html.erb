<%= render "layouts/navbar" %>

<div id="home-container">
  <div class="main-container">
    <h1 id="sign-title">Not every hero wears a mask.<br>Only the coolest.</h1>
    <div id="login-container">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <br>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <br>
        <%= f.button :submit, "Log in", class: "primary-button mb-3" %>
        <br>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"signup-links" %><br>
        <% end %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div> <!-- this closes the div.landing-container -->
</div> <!-- questo chiude l'home-container -->

