<div class="landing-container">
  <h2 class="sign-name">Not every hero wears a mask.<br>Only the coolest</h2>

  <div class="shadow p-3 mb-5 bg-white rounded sign-box">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div class="fp-question">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
      <div class="remember-btn">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

    <p>Not yet a member?</p>

    <%= render "devise/shared/links" %>
  </div> <!-- this closes the div.sign-box -->
</div> <!-- this closes the div.landing-container -->

